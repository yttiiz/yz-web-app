{
  "action": "/booking",
  "method": "PUT",
  "content": [
    {
      "type": "text",
      "label": "Nom",
      "placeholder": "Nom...",
      "name": "name",
      "minLength": 2,
      "maxLength": 40
    },
    {
      "type": "select",
      "label": "Type",
      "name": "type",
      "items": [
        "studio",
        "F1",
        "F2",
        "F3"
      ]
    },
    {
      "type": "text",
      "label": "Superficie (en m2)",
      "placeholder": "25...",
      "name": "area",
      "minLength": 2,
      "maxLength": 3
    },
    {
      "type": "select",
      "label": "Pièces",
      "name": "rooms",
      "items": [
        "1",
        "2",
        "3",
        "4"
      ]
    },
    {
      "type": "text",
      "label": "Prix",
      "placeholder": "49,99 €...",
      "name": "price",
      "minLength": 2,
      "maxLength": 5
    },
    {
      "type": "textarea",
      "label": "Description",
      "placeholder": "Description...",
      "name": "description",
      "minLength": 2,
      "maxLength": 250
    },
    {
      "type": "text",
      "label": "Vignette",
      "placeholder": "Changer l'image...",
      "name": "thumbnail-file",
      "accept": ".png, .jpg, .webp, .jpeg"
    },
    {
      "type": "text",
      "label": "Images de l'appartement",
      "placeholder": "Changer l'image...",
      "name": "pictures-file",
      "accept": ".png, .jpg, .webp, .jpeg"
    },
    {
      "type": "text",
      "label": "Id des avis ",
      "name": "reviewId",
      "disabled": true,
      "minLength": 2,
      "maxLength": 40
    },
    {
      "type": "text",
      "label": "Id des réservations ",
      "name": "bookingId",
      "disabled": true,
      "minLength": 2,
      "maxLength": 40
    },
    {
      "type": "submit",
      "value": "Mettre à jour"
    }
  ]
}
